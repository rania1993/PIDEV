<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.esprit.pi.pidev.UserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:textAlignment="center"
    >

        <Button
            android:id="@+id/btnBack"
            android:layout_width="414dp"
            android:layout_height="wrap_content"
            android:text="Back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtUUsername"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:text="Username:" />

            <EditText
                android:id="@+id/edtUsername"
                android:layout_width="379dp"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtprenom"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:text="Prenom:" />

        <EditText
            android:id="@+id/edprenom"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtmail"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="Mail:" />
        <EditText
            android:id="@+id/edmail"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtsalaire"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:text="Salaire:" />
        <EditText
            android:id="@+id/edsalaire"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtage"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="Age:" />
        <EditText
            android:id="@+id/edage"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtcin"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="CIN:" />
        <EditText
            android:id="@+id/edcin"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </LinearLayout>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="save" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
